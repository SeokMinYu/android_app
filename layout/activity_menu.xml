<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foods"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="13dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chicken1"/>
        <TextView
            android:id="@+id/chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후라이드치킨"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16000원"
                android:layout_weight="1"/>
        <EditText
            android:id="@+id/chickenCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="수량 입력"
            android:inputType="textPersonName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="13dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pasta3"/>
            <TextView
                android:id="@+id/pasta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로제파스타"
                android:layout_marginLeft="20dp"
                android:layout_weight="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000원"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/pastaCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="수량 입력"
                android:inputType="textPersonName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="13dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pizza1"/>
            <TextView
                android:id="@+id/pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콤비네이션피자"
                android:layout_marginLeft="20dp"
                android:layout_weight="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14000원"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/pizzaCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="수량 입력"
                android:inputType="textPersonName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="13dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/steak"/>
            <TextView
                android:id="@+id/steak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등심스테이크"
                android:layout_marginLeft="20dp"
                android:layout_weight="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23000원"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/steakCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="수량 입력"
                android:inputType="textPersonName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="13dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lobster"/>
            <TextView
                android:id="@+id/lobstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="랍스터구이"
                android:layout_marginLeft="20dp"
                android:layout_weight="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28000원"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/lobstarCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="수량 입력"
                android:inputType="textPersonName"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="13dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/drink1"/>
            <TextView
                android:id="@+id/drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음료수"
                android:layout_marginLeft="20dp"
                android:layout_weight="3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000원"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/drinkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="수량 입력"
                android:inputType="textPersonName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="10% 할인 쿠폰 적용"/>
            <Button
                android:id="@+id/resultBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주문 완료"
                android:textSize="20dp"
                android:backgroundTint="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>